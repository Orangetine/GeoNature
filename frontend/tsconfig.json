{
  "compileOnSave": false,
  "include": [
    // "...",
    "@types/jquery/index.d.ts", // Had to specify exact file here instead of wild card. Else jquery is also included.
  ],
  "exclude": [
    "cypress/global.d.ts" // important to exclude this.
  ],
  "compilerOptions": {
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "ES2022",
    "target": "ES2022",
    "lib": [
      "ES2022",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types",
      "./@types"
    ],
    "types": [],
    "baseUrl": "./",
    "paths": {
      "@geonature_common/*": [
        "src/app/GN2CommonModule/*"
      ],
      "@geonature/*": [
        "src/app/*"
      ],
      "@geonature_config/*": [
        "src/conf/*"
      ],
      "@librairies/*": [
        "./node_modules/*"
      ]
    },
    "useDefineForClassFields": false
  }
}
